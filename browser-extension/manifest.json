{
    "manifest_version": 3,
    "name": "PhishGuard AI Companion",
    "version": "1.0",
    "description": "Real-time phishing detection for your browser, powered by PhishGuard AI.",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://mail.google.com/*",
        "https://outlook.live.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}